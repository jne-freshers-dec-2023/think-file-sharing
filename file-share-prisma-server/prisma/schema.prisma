// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @map("_id")
  username     String?
  email        String    @unique
  password     String?
  docs         Document[]
}

model Document {
  id            Int       @id @map("_id")
  docName       String  
  docContent    Bytes 
  docSize       Int
  docType       String
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId       Int
  created_at    DateTime  @default(now())
}

model Link {
  id             Int       @id @map("_id")
  token          String
  expiresAt     DateTime
  createdAt      DateTime
  isVisited      Boolean
}
